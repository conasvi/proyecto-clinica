<h1>CENTRO MEDICO BACKEND</h1>
<h2>LISTADO DE PACIENTES</h2>
<table border="1">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cedula</th>
            <th>Edad</th>
            <th>Telefono</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacientes }}
        <tr>
            <form action="/pacientes/actualizar/{{cedula}}" method="post">
                <td><input type="text" id="nombres" name="nombres" value="{{nombres}}"{{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}>{{/ifCond}}</td>
                <td><input type="text" id="apellido" name="apellido" value="{{apellido}}"{{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}>{{/ifCond}}</td>
                <td><input type="text" value="{{cedula}}" disabled></td>
                <td><input type="text" id="edad" name="edad" value="{{edad}}"{{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}>{{/ifCond}}</td>
                <td><input type="tel" id="telefono" name="telefono" value="{{telefono}}"{{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}>{{/ifCond}}</td>
                <td><input id="especialidad" name="especialidad" value="{{especialidad}}"{{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}>{{/ifCond}}</td>
                
                <td>
                {{#if ../estado}}
                <a href="/pacientes/eliminar/{{cedula}}"><img src="/images/eliminar.png"></a><br><br>
                <a href="/pacientes/enviar/{{@key}}"><img src="/images/editar.png"></a>
                {{else}}
                <input type="submit" value="Enviar">
                {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<a class="volver" href="/">Volver</a>
<a href="pacientes/agregar-pacientes">Agregar pacientes</a>